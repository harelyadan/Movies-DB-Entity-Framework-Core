<Window x:Class="MoviesDB_Manager.AddDirector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesDB_Manager"
        mc:Ignorable="d"
        Title="Add Director" Height="160" Width="200" ResizeMode="NoResize">
    <Grid Name="addDirectorPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1">First name:</Label>
        <Label Grid.Row="2">Last Name:</Label>

        <TextBox Name="firstNameTextBox" Height="20" Grid.Row="1" Grid.Column="1"/>
        <TextBox Name="lastNameTextBox" Height="20" Grid.Row="2" Grid.Column="1"/>
        <Button Name="addButton" Grid.Row="3" Grid.Column="1"
                Click="add_click">Add</Button>
    </Grid>
</Window>
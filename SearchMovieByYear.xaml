<Window x:Class="MoviesDB_Manager.SearchMovieByYear"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesDB_Manager"
        mc:Ignorable="d"
        Title="Search Movie By Year" Height="180" Width="240" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
        <Label/>
        <TextBox Name="year1TextBox" Width="100" HorizontalAlignment="Left"/>
        <Label Content="between" Height="40" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox Name="year2TextBox" Width="100" HorizontalAlignment="Right"/>
        <Label Height="30"/>
        <Button Name="searchButton" Click="search_click">Search</Button>
    </StackPanel>
</Window>

<Window x:Class="MoviesDB_Manager.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesDB_Manager"
        mc:Ignorable="d"
        Title="Edit" Height="100" Width="130" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center">
        <TextBox Name="textBox" Width="130" Height="25"/>
        <Label/>
        <Button Name="editButton" Click="edit_click" >Edit</Button>
    </StackPanel>
</Window>
